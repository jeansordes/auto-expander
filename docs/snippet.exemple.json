[
    {
        "trigger": "btw${0:instant}",
        "replacement": "By the way$0"
    },
    {
        "trigger": "/today${0:newline,tab,space,instant}",
        "replacement": "<% tp.date.now(\"YYYY-MM-DD (dddd D MMMM YYYY)\") %>$0",
        "commands": "templater-obsidian:replace-in-file-templater"
    },
    {
        "trigger": "- [ ] ${0:backspace}",
        "replacement": "- $0"
    },
    {
        "regex": true,
        "trigger": "${0:newline}(.)\n((#+) .*[0-9]{4}-[0-9]{2}-[0-9]{2}.*)",
        "replacement": [
            "$1",
            "$3 <% tp.date.now(\"YYYY-MM-DD (dddd D MMMM YYYY)\") %>",
            "$0",
            "$2"
        ],
        "commands": "templater-obsidian:replace-in-file-templater"
    },
    {
        "trigger": "/home${0:instant,space,newline,tab}",
        "replacement": "$0",
        "commands": "daily-notes"
    }
]